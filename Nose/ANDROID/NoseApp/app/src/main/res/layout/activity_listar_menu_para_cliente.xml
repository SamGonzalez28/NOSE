<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blanco">

    <TextView
        android:id="@+id/txvnomloc"
        android:layout_marginTop="@dimen/margen_15"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="asdasdasdasdsa"
        android:textColor="@color/colorPrimaryDark"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:gravity="center_horizontal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignBaseline="@+id/txvnomloc"
        android:background="@color/colorPrimaryDark"/>


    <ListView
        android:id="@+id/mi_lista"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@color/fondo"
        android:dividerHeight="6dp"
        android:layout_marginTop="45dp"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_flot_comprar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cash"
        app:backgroundTint="@color/icon"
        android:layout_marginLeft="@dimen/margen_20"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>