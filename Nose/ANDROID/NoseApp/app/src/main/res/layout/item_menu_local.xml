<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margen_20"
    android:background="@color/OrangeHibiscus">

    <ImageView
        android:id="@+id/img_tipo"
        android:layout_width="@dimen/menu_100"
        android:layout_height="@dimen/menu_100"
        android:layout_marginLeft="@dimen/margen_15"
        android:layout_marginRight="@dimen/margen_15"
        android:src="@drawable/menu1"
        android:layout_marginTop="@dimen/margen_10"/>

    <TextView
        android:id="@+id/txt_precio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margen_20"
        android:layout_marginTop="@dimen/margen_5"
        android:layout_toRightOf="@id/img_menu"
        android:gravity="right"
        android:text="@string/precio"
        android:textSize="@dimen/letra18"
        android:textColor="@color/blanco"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/txt_descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margen_20"
        android:layout_marginTop="@dimen/margen_35"
        android:layout_toRightOf="@id/img_tipo"
        android:text="@string/descripcion"
        android:textSize="@dimen/letra18"
        android:textColor="@color/blanco"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginRight="@dimen/margin_reg_cli_20"
        android:layout_marginBottom="@dimen/margen_5">


        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="@dimen/margen_40"
            android:layout_height="@dimen/margen_40"
            android:layout_marginTop="@dimen/margen_80"
            android:layout_marginRight="@dimen/margen_10"
            android:layout_toRightOf="@id/btn_new"
            android:src="@mipmap/ic_delete"/>

        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="@dimen/margen_40"
            android:layout_height="@dimen/margen_40"
            android:layout_toRightOf="@id/btn_delete"
            android:layout_marginTop="@dimen/margen_80"
            android:src="@mipmap/ic_edit"/>
    </RelativeLayout>

</RelativeLayout>