<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/texto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margen_20"
    android:background="@color/pineglade">

    <ImageView
        android:id="@+id/img_registros"
        android:layout_width="@dimen/menu_100"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margen_15"
        android:layout_marginRight="@dimen/margen_15"
        android:layout_marginTop="@dimen/margen_10"
        android:src="@drawable/factura" />

    <TextView
        android:id="@+id/txt_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margen_20"
        android:layout_marginTop="@dimen/margen_40"
        android:layout_toRightOf="@id/img_registros"
        android:textColor="@color/royalBlue"
        android:text="@string/sin_regi"
        android:textSize="@dimen/letra18"
        />


</RelativeLayout>