<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    android:background="@color/blanco"
    tools:context="com.sam.nose.Local.localActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="40dp">

        <ImageButton
            android:id="@+id/btn_menus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margen_30"
            android:src="@drawable/menu"
            android:background="@color/blanco"/>

        <ImageButton
            android:id="@+id/btn_clientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margen_20"
            android:clickable="true"
            android:src="@drawable/equipo"
            android:background="@color/blanco" />

        <ImageButton
            android:id="@+id/btn_registros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margen_20"
            android:src="@drawable/factura"
            android:background="@color/blanco"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
